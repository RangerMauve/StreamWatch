%script{:src => "http://ajax.googleapis.com/ajax/libs/swfobject/2.2/swfobject.js", :type => "text/javascript"}
:javascript
	params = { AllowScriptAccess: 'always' };
	function livestreamPlayerCallback(event) {
		if (event == 'ready') {
			player = document.getElementById("livestreamPlayer");
			player.setDevKey('#{$devkey}');
			player.load('#{@stream}');	
		}
	}
	swfobject.embedSWF("http://cdn.livestream.com/chromelessPlayer/v20/playerapi.swf",
		"livestreamPlayer", "400", "300", "9.0.0", "expressInstall.swf", null, params);
%body
	#livestreamPlayer
		%h1 This page requires flash
			%p
				%a{:href => "http://www.adobe.com/go/getflashplayer"} download flash
		%br/
		%input{:onclick => "player.startPlayback()", :type => "button", :value => "play"}/
		%input{:onclick => "player.stopPlayback()", :type => "button", :value => "pause"}/
		%input{:onclick => "player.volumeUp()", :type => "button", :value => "vol +"}/
		%input{:onclick => "player.volumeDown()", :type => "button", :value => "vol -"}/
